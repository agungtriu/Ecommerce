<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_store_grid_shimmer"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/colorSurface"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_store_grid_shimmer"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:background="@color/colorShimmer"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_store_grid_shimmer_title"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorShimmer"
            app:layout_constraintTop_toBottomOf="@id/iv_item_store_grid_shimmer" />

        <TextView
            android:id="@+id/tv_item_store_grid_shimmer_price"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorShimmer"
            app:layout_constraintTop_toBottomOf="@id/tv_item_store_grid_shimmer_title" />

        <ImageView
            android:id="@+id/iv_item_store_grid_shimmer_store"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorShimmer"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_store_grid_shimmer_store"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_item_store_grid_shimmer_store" />

        <TextView
            android:id="@+id/tv_item_store_grid_shimmer_store"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorShimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/iv_item_store_grid_shimmer_store"
            app:layout_constraintTop_toBottomOf="@id/tv_item_store_grid_shimmer_price" />

        <ImageView
            android:id="@+id/iv_item_store_grid_shimmer_rating"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorShimmer"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_store_grid_shimmer_rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_item_store_grid_shimmer_rating" />

        <TextView
            android:id="@+id/tv_item_store_grid_shimmer_rating"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorShimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_store_grid_shimmer_rating"
            app:layout_constraintTop_toBottomOf="@id/tv_item_store_grid_shimmer_store" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>