<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_store_linear_shimmer"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="?attr/colorOnPrimary"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_store_linear_shimmer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:src="@color/colorShimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_item_store_linear_shimmer_title"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_item_store_linear_shimmer_title"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorShimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintStart_toEndOf="@id/iv_item_store_linear_shimmer"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_store_linear_shimmer_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/colorShimmer"
            app:layout_constraintEnd_toEndOf="@id/tv_item_store_linear_shimmer_title"
            app:layout_constraintStart_toStartOf="@id/tv_item_store_linear_shimmer_title"
            app:layout_constraintTop_toBottomOf="@id/tv_item_store_linear_shimmer_title" />

        <ImageView
            android:id="@+id/iv_item_store_linear_shimmer_store"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:background="@color/colorShimmer"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_store_linear_shimmer_store"
            app:layout_constraintStart_toStartOf="@id/tv_item_store_linear_shimmer_title"
            app:layout_constraintTop_toTopOf="@id/tv_item_store_linear_shimmer_store" />

        <TextView
            android:id="@+id/tv_item_store_linear_shimmer_store"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorShimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/iv_item_store_linear_shimmer_store"
            app:layout_constraintTop_toBottomOf="@id/tv_item_store_linear_shimmer_price" />

        <ImageView
            android:id="@+id/iv_item_store_linear_shimmer_rating"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:background="@color/colorShimmer"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_store_linear_shimmer_rating"
            app:layout_constraintStart_toStartOf="@id/tv_item_store_linear_shimmer_title"
            app:layout_constraintTop_toTopOf="@id/tv_item_store_linear_shimmer_rating" />

        <TextView
            android:id="@+id/tv_item_store_linear_shimmer_rating"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorShimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_store_linear_shimmer_rating"
            app:layout_constraintTop_toBottomOf="@id/tv_item_store_linear_shimmer_store"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_item_store_linear_shimmer_rating"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginVertical="3dp"
            android:layout_marginStart="4dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_store_linear_shimmer_rating"
            app:layout_constraintStart_toEndOf="@id/tv_item_store_linear_shimmer_rating"
            app:layout_constraintTop_toTopOf="@id/tv_item_store_linear_shimmer_rating" />

        <TextView
            android:id="@+id/tv_item_store_linear_shimmer_sold"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@color/colorShimmer"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_store_linear_shimmer_rating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/divider_item_store_linear_shimmer_rating"
            app:layout_constraintTop_toTopOf="@id/iv_item_store_linear_shimmer_rating" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>