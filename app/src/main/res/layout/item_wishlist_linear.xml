<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_wishlist_linear"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorOnPrimary"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_wishlist_linear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_wishlist_linear_rating"
            app:layout_constraintEnd_toStartOf="@id/tv_item_wishlist_linear_title"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_item_wishlist_linear_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/item_title_hint"
            android:textAppearance="@style/Theme.Ecommerce.TextAppearance.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintStart_toEndOf="@id/iv_item_wishlist_linear"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_wishlist_linear_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins_600"
            android:text="@string/item_price_hint"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tv_item_wishlist_linear_title"
            app:layout_constraintStart_toStartOf="@id/tv_item_wishlist_linear_title"
            app:layout_constraintTop_toBottomOf="@id/tv_item_wishlist_linear_title" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_item_wishlist_linear_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_account_outline_circle"
            android:tint="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_wishlist_linear_store"
            app:layout_constraintStart_toStartOf="@id/tv_item_wishlist_linear_title"
            app:layout_constraintTop_toTopOf="@id/tv_item_wishlist_linear_store" />

        <TextView
            android:id="@+id/tv_item_wishlist_linear_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins_400"
            android:text="@string/item_store_hint"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_wishlist_linear_wishlist"
            app:layout_constraintTop_toBottomOf="@id/tv_item_wishlist_linear_price" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_item_wishlist_linear_rating"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_star"
            android:tint="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_wishlist_linear_rating"
            app:layout_constraintStart_toStartOf="@id/tv_item_wishlist_linear_title"
            app:layout_constraintTop_toTopOf="@id/tv_item_wishlist_linear_rating" />

        <TextView
            android:id="@+id/tv_item_wishlist_linear_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_400"
            android:text="@string/item_rating_hint"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_wishlist_linear_rating"
            app:layout_constraintTop_toBottomOf="@id/tv_item_wishlist_linear_store"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_item_wishlist_linear_rating"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginVertical="3dp"
            android:layout_marginStart="4dp"
            app:dividerColor="?attr/colorOutlineVariant"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_wishlist_linear_rating"
            app:layout_constraintStart_toEndOf="@id/tv_item_wishlist_linear_rating"
            app:layout_constraintTop_toTopOf="@id/tv_item_wishlist_linear_rating" />

        <TextView
            android:id="@+id/tv_item_wishlist_linear_sold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins_400"
            android:text="@string/item_sold_hint"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_wishlist_linear_rating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider_item_wishlist_linear_rating"
            app:layout_constraintTop_toTopOf="@id/iv_item_wishlist_linear_rating" />

        <ImageView
            android:id="@+id/btn_wishlist_remove_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/all_rectangle_rounded_surface"
            android:padding="8dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_wishlist_cart_linear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_item_wishlist_linear_rating"
            app:tint="?attr/colorPrimary" />

        <Button
            android:id="@+id/btn_wishlist_cart_linear"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:text="@string/detail_add_cart"
            android:textAppearance="@style/Theme.Ecommerce.TextAppearance.LabelLarge"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_wishlist_remove_linear"
            app:layout_constraintTop_toBottomOf="@id/iv_item_wishlist_linear_rating" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>