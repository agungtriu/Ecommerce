<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Ecommerce" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="Theme.Ecommerce" parent="Base.Theme.Ecommerce" />

    <style name="Theme.Ecommerce.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_splashscreen</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.Ecommerce</item>
    </style>

</resources>