<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Ecommerce" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="Theme.Ecommerce" parent="Base.Theme.Ecommerce" />

    <style name="Theme.Ecommerce.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_splashscreen</item>
        <item name="postSplashScreenTheme">@style/Theme.Ecommerce</item>
    </style>

    <style name="DialogTheme" parent="Theme.Ecommerce">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Theme.Ecommerce.Toolbar" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/poppins_400</item>
    </style>

    <style name="Theme.Ecommerce.ChipGroup.Chip" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">@font/poppins_500</item>
        <item name="chipBackgroundColor">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="ThemeOverlay.App.Chip" parent="">
        <item name="elevation">0dp</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Chip</item>
    </style>

</resources>