<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Ecommerce" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorSurface</item>
        <item name="android:statusBarColor">@color/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Ecommerce" parent="Base.Theme.Ecommerce" />

    <style name="Theme.Ecommerce.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_splashscreen</item>
        <item name="postSplashScreenTheme">@style/Theme.Ecommerce</item>
    </style>

    <style name="DialogTheme" parent="Theme.Ecommerce">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Theme.Ecommerce.TextAppearance.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/poppins_400</item>
    </style>

    <style name="Theme.Ecommerce.TextAppearance.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/poppins_500</item>
    </style>

    <style name="Theme.Ecommerce.TextAppearance.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/poppins_500</item>
    </style>

    <style name="Theme.Ecommerce.TextAppearance.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/poppins_400</item>
    </style>

    <style name="Theme.Ecommerce.TextAppearance.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins_400</item>
    </style>

    <style name="Theme.Ecommerce.TextAppearance.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/poppins_400</item>
    </style>

    <style name="Theme.Ecommerce.TextAppearance.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/poppins_500</item>
    </style>

    <style name="Theme.Ecommerce.TextAppearance.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/poppins_500</item>
    </style>

    <style name="Theme.Ecommerce.ChipGroup.Chip" parent="Theme.Ecommerce.TextAppearance.LabelLarge">
        <item name="chipBackgroundColor">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="closeIconVisible">false</item>
    </style>


    <style name="ThemeOverlay.App.Chip" parent="">
        <item name="elevation">0dp</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Chip</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">20dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">20dp</item>
    </style>

    <style name="Theme.Ecommerce.TextAppearance.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/poppins_400</item>
    </style>

    <style name="AlertDialogTheme" parent="MaterialAlertDialog.Material3">
        <item name="materialAlertDialogBodyTextStyle">
            @style/Theme.Ecommerce.TextAppearance.BodyLarge
        </item>
        <item name="fontFamily">@font/poppins_400</item>
    </style>
</resources>