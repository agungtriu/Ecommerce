<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/prelogin_navigation">

    <navigation
        android:id="@+id/prelogin_navigation"
        app:startDestination="@id/loginFragment">

        <fragment
            android:id="@+id/registerFragment"
            android:name="com.agungtriu.ecommerce.ui.prelogin.register.RegisterFragment"
            android:label="fragment_register"
            tools:layout="@layout/fragment_register">

            <action
                android:id="@+id/action_registerFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/registerFragment"
                app:popUpToInclusive="true" />

        </fragment>

        <fragment
            android:id="@+id/loginFragment"
            android:name="com.agungtriu.ecommerce.ui.prelogin.login.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">

            <action
                android:id="@+id/action_loginFragment_to_registerFragment"
                app:destination="@id/registerFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="true" />

            <action
                android:id="@+id/action_loginFragment_to_onBoardingFragment"
                app:destination="@id/onBoardingFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="true" />

        </fragment>

        <fragment
            android:id="@+id/onBoardingFragment"
            android:name="com.agungtriu.ecommerce.ui.prelogin.onboarding.OnBoardingFragment"
            android:label="fragment_on_boarding"
            tools:layout="@layout/fragment_on_boarding">

            <action
                android:id="@+id/action_onBoardingFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/onBoardingFragment"
                app:popUpToInclusive="true" />

            <action
                android:id="@+id/action_onBoardingFragment_to_registerFragment"
                app:destination="@id/registerFragment"
                app:popUpTo="@id/onBoardingFragment"
                app:popUpToInclusive="true" />

        </fragment>

    </navigation>

    <navigation
        android:id="@+id/main_navigation"
        app:startDestination="@id/mainFragment">

        <fragment
            android:id="@+id/profileFragment"
            android:name="com.agungtriu.ecommerce.ui.profile.ProfileFragment"
            android:label="fragment_profile"
            tools:layout="@layout/fragment_profile">

            <action
                android:id="@+id/action_profileFragment_to_mainFragment"
                app:destination="@id/mainFragment"
                app:popUpTo="@id/profileFragment"
                app:popUpToInclusive="true" />

        </fragment>

        <fragment
            android:id="@+id/mainFragment"
            android:name="com.agungtriu.ecommerce.ui.main.MainFragment"
            android:label="fragment_main"
            tools:layout="@layout/fragment_main">

            <action
                android:id="@+id/action_mainFragment_to_profileFragment"
                app:destination="@id/profileFragment"
                app:popUpTo="@id/mainFragment"
                app:popUpToInclusive="true" />

        </fragment>

    </navigation>

    <action
        android:id="@+id/action_global_to_prelogin_navigation"
        app:destination="@id/prelogin_navigation"
        app:popUpTo="@id/app_navigation"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_to_main_navigation"
        app:destination="@id/main_navigation"
        app:popUpTo="@id/app_navigation"
        app:popUpToInclusive="true" />

</navigation>